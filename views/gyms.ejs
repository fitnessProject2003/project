<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GymHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="gyms.css">
    <link rel="stylesheet" href="styles.css">
</head>

<body>

    <!-- nav  -->
    <%- include('partials/nav') %>
    <!-- list of the gyms  -->
    <div class="container mt-4">
        <div class="d-flex justify-content-between mb-3">
            <input type="text" id="searchInput" class="form-control w-50" placeholder="Search gym by name">
            <div class="d-flex">
                <select id="locationFilter" class="form-select w-30 mx-2">
                    <option value="">City</option>
                    <option value="Amman">Amman</option>
                    <option value="Zarqa">Zarqa</option>
                    <option value="Irbid">Irbid</option>
                </select>
                <select id="ratingFilter" class="form-select w-30">
                    <option value="">Rating</option>
                    <option value="desc">High-Low</option>
                    <option value="asc">Low-High</option>
                </select>
            </div>
        </div>

        <!-- Gym listing -->
        <div class="row" id="gymList">

        </div>
    </div>

    <!-- footer  -->
    <%- include('partials/footer') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="gyms.js"></script>
</body>

</html>